<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnl_root_san_pham"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/linearlayout_filter_custom"
    android:orientation="horizontal"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="88dp"
        android:layout_height="88dp">
        <ImageView
            android:id="@+id/image_row_san_pham"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginLeft="-10dp"
            android:layout_weight="3"
            android:background="@mipmap/loading_button"
            android:scaleType="fitXY" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_weight="7"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iced Espresso With Milk"
            />
        <TextView
            android:textSize="14sp"
            android:textColor="@color/color_red"
            android:id="@+id/price_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.450.000 Ä‘"
            />
        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/taken_day_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iced Espresso With Milk"
            />

    </LinearLayout>

</LinearLayout>